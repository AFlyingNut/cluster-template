---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: certificate-issuer
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: '0'
spec:
  project: home-kubernetes
  sources:
    - repoURL: #{ bootstrap_github_address }#
      path: kubernetes/apps/cert-manager/certificate-issuer
      targetRevision: #{ bootstrap_github_branch|default('main', true) }#
      helm:
        releaseName: certificate-issuer
        valueFiles:
          - secrets://values.sops.yaml
  destination:
    name: in-cluster
    namespace: cert-manager
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true
    - ServerSideApply=true

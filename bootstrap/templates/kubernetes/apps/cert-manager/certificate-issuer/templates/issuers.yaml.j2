apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ .Values.issuer_name }}
spec:
  acme:
    server: {{ .Values.issuer_server }}
    email: {{ .Values.cloudflare_email }}
    privateKeySecretRef:
      name: {{ .Values.issuer_name }}
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: cert-manager-secret
              key: api-token
        selector:
          dnsZones:
            - {{ .Values.cloudflare_domain }}


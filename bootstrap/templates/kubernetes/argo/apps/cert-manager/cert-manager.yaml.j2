---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: cert-manager
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: '0'
spec:
  project: home-kubernetes
  sources:
    - repoURL: #{ bootstrap_github_address }#
      path: kubernetes/apps/cert-manager/cert-manager
      targetRevision: #{ bootstrap_github_branch|default('main', true) }#
    - repoURL: #{ bootstrap_github_address }#
      path: kubernetes/apps/cert-manager/certificate-issuer
      targetRevision: #{ bootstrap_github_branch|default('main', true) }#
  destination:
    name: in-cluster
    namespace: cert-manager
  syncPolicy:
    automated:
      allowEmpty: true
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
      - RespectIgnoreDifferences=true
  ignoreDifferences:
  - group: argoproj.io
    kind: Application
    jsonPointers:
    - /status
    - /metadata/annotations

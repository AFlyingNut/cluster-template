---
helmDefaults:
  wait: true
  waitForJobs: true
  timeout: 600
  recreatePods: true
  force: true

repositories:
  - name: jetstack
    url: https://charts.jetstack.io

apiVersions:
  - monitoring.coreos.com/v1

releases:
  - name: argocd
    namespace: argocd
    chart: oci://ghcr.io/argoproj/argo-helm/argo-cd
    version: 7.3.6
    secrets:
      - ../apps/argocd/argocd/values.sops.yaml
    needs:
      - cert-manager/cert-manager


